{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./dist/",
    "target": "es6",
    "removeComments": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    ".git",
    "node_modules"
  ]
}
